void timing(){
   //Runs when falling edge from Schmitt Trigger is seen
   check = digitalRead(2);   // This is mucho importante
   if(0 != check){
    return;  
   }
   for (i=64+128; i<256; i++) {
     if(i!=j){LEDWrite(dat[i]);}
     else{LEDWrite(bullet[0]);}
   }
   for (i=0; i<64+128; i++) {
     if(i!=j){LEDWrite(dat[i]);}
     else{LEDWrite(bullet[0]);}
   }
   PORTD = B10100000;
   if(j<189){++j;}
   else if(j==189){j=212;}
   else if(j<256){++j;}
   else{j=0;}
}

void LEDWrite(struct fin dat) {
  PORTD = 0b10100000;
  SPI.transfer(dat.outer);
  SPI.transfer(dat.outer2);
  SPI.transfer(dat.inner2);
  SPI.transfer(dat.inner);
  PORTD = 0b11100000;
  //delayMicroseconds(59);
  PORTD = 0b00100000;
  delayMicroseconds(118); 
}
